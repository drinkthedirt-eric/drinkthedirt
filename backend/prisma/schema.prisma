// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roaster {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  description String?
  link String?
  coffees Coffee[]
  logoPhoto Json
}

model Coffee {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  photos String[]
  roasterId Int
  roaster Roaster @relation(fields: [roasterId], references: [id])
  country String
  location String? // can include region, city, etc. comma-delimited.
  elevationStart Int?
  elevationEnd Int?
  producer String
  varietals String[]
  process String
  roasterTastingNotes String[]
  roasterDescription String?
  price Float?
  priceTargetWeightGrams Int?

  flavorCategories FlavorCategory[]
  sweetness FlavorProfileLevel
  body FlavorProfileLevel
  acidity FlavorProfileLevel
  ourTastingNotes String[]
  ourReview String?
  isFavorite Boolean @default(false)
  recipes Recipe[]
}

model Recipe {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  coffeeId Int
  coffee Coffee @relation(fields: [coffeeId], references: [id])
  method BrewMethod
  name RecipeName
  coffeeWeightGrams Int
  waterWeightGrams Int
  grindSizeMicrons Int
  waterTempC Int
  steps Json[]
}

enum RecipeName {
    TwoPour
    ThreePour
}

enum BrewMethod {
    V60
    Aeropress
}

enum FlavorCategory {
  Spices
  NutsChocolate
  Candy
  Floral
  Fruity
  Acidic
  FerementationFunk
}

enum FlavorProfileLevel {
  Low
  Medium
  High
}