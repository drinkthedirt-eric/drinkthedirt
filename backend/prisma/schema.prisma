// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

generator typegraphql {
  provider = "typegraphql-prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Roaster {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  description String?
  link String?
  coffees Coffee[]
  logoPhoto Json
}

model Coffee {
  id Int @id @default(autoincrement())
  createdAt DateTime @default(now())
  name String
  photos Json[]
  roasterId Int
  roaster Roaster @relation(fields: [roasterId], references: [id])
  country String
  location String? // can include region, city, etc. comma-delimited.
  elevationStart Int?
  elevationEnd Int?
  producer String
  varietals String[]
  process String
  roasterTastingNotes String[]
  roasterDescrption String?
  price Float?
  priceTargetWeightGrams Int?

  flavorCategories FlavorCategory[]
  sweetness FlavorProfileLevel
  body FlavorProfileLevel
  acidity FlavorProfileLevel
  ourTastingNotes String[]
}

enum FlavorCategory {
  Spices
  NutsChocolate
  Candy
  Floral
  Fruity
  Acidic
  FerementationFunk
}

enum FlavorProfileLevel {
  Low
  Medium
  High
}